$C = "../../Common.ui";


@CustomLabelStyle = LabelStyle(
  FontSize: 14,
  TextColor: #bfcdd5,
  RenderBold: true,
  HorizontalAlignment: Center,
  VerticalAlignment: Center
);

Group {
  LayoutMode: Top;
  Anchor: (Width: 800, Height: 500);
  Padding: (Full: 10);

  $C.@Container #Containerb165e734 {
    ScrollbarStyle: $C.@DefaultScrollbarStyle;

    #Title {
      Group {
        LayoutMode: Top;
        $C.@Title #ScoreBoardTitle {
          @Text = "Scoreboard";
          Style: (TextColor: #ffffff, VerticalAlignment: Center);
        }
      }
    }

    #Content {
      Group #titles {
        LayoutMode: Left;
        Anchor: (Bottom: 10, Horizontal: 1);
        Label #titlePlayer {
            Style: (
                FontSize: 14,
                TextColor: #bfcdd5,
                RenderBold: true,
                VerticalAlignment: Center
            );
            Anchor: (Horizontal: 1, Width: 130);
            Text: "Player";
          Padding: (Left: 5);
        }

        Label #titleKarma {
          Style: @CustomLabelStyle;
          Anchor: (Horizontal: 1, Width: 130);
          Text: "Karma";
        }
        Label #titleKills {
          Style: @CustomLabelStyle;
          Anchor: (Horizontal: 1, Width: 130);
          Text: "Kills";
        }
        Label #titleDeaths {
          Style: @CustomLabelStyle;
          Anchor: (Horizontal: 1, Width: 130);
          Text: "Deaths";
        }
        Label #titlePing {
          Style: @CustomLabelStyle;
          Anchor: (Horizontal: 1, Width: 130);
          Text: "Ping";
        }
      }
    }
  }
}
